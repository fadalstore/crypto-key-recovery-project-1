# Bitcoin Scanner Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Dashboard Authentication
# Generate these using: python generate_credentials.py
DASHBOARD_USERNAME=your_username_here
DASHBOARD_PASSWORD_HASH=your_bcrypt_hash_here

# REQUIRED: API Security
API_KEY=your_api_key_here

# Network Configuration (IMPORTANT!)
USE_TESTNET=true
ENABLE_MAINNET=false
REQUIRE_API_KEY=true

# Database (optional - uses local JSON if not set)
# MONGO_URI=mongodb://localhost:27017

# Telegram Notifications (optional)
# BOT_TOKEN=your_bot_token_here
# CHAT_ID=your_chat_id_here

# CSV Export Settings
CSV_OUTPUT_DIR=exports
CSV_ROTATION_DAYS=30

# Automated Scanning (disabled by default)
ENABLE_AUTO_SCAN=false
SCAN_INTERVAL_MINUTES=30
SCAN_BATCH_SIZE=50

# Google Drive Backup (optional)
# ENABLE_DRIVE_BACKUP=false
# GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/service-account.json
# DRIVE_FOLDER_ID=your_folder_id_here
