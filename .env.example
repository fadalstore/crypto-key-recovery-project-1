# Bitcoin Scanner Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string (optional - leave empty for test mode with JSON storage)
MONGO_URI=

# ===========================================
# TELEGRAM ALERTS
# ===========================================
# Telegram bot token (optional - leave empty for console logging)
BOT_TOKEN=
# Telegram chat ID to send alerts
CHAT_ID=

# ===========================================
# CSV EXPORT CONFIGURATION
# ===========================================
# Directory to store CSV exports (default: exports)
CSV_OUTPUT_DIR=exports
# Number of days to keep old CSV files (default: 30)
CSV_ROTATION_DAYS=30

# ===========================================
# GOOGLE DRIVE BACKUP (OPTIONAL)
# ===========================================
# Enable Google Drive backup (default: false)
ENABLE_DRIVE_BACKUP=false
# Path to Google service account JSON file or JSON content as string
GOOGLE_SERVICE_ACCOUNT_JSON=
# Google Drive folder ID to upload CSV files
DRIVE_FOLDER_ID=

# ===========================================
# DASHBOARD AUTHENTICATION
# ===========================================
# Dashboard username (default: admin)
DASHBOARD_USERNAME=admin
# Dashboard password (default: admin123) - CHANGE THIS!
DASHBOARD_PASSWORD=admin123

# ===========================================
# AUTOMATED SCANNING
# ===========================================
# Enable automated 24/7 scanning (default: false)
ENABLE_AUTO_SCAN=false
# Interval between scans in minutes (default: 30)
SCAN_INTERVAL_MINUTES=30
# Number of keys to scan per batch (default: 50)
SCAN_BATCH_SIZE=50
# Maximum concurrent scan jobs (default: 1)
MAX_CONCURRENT_SCANS=1
# Maximum errors before stopping scheduler (default: 5)
ERROR_THRESHOLD=5
